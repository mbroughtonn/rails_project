<% content_for(:title) { @publisher.name } %>

<h2 class="title is-3">Games published by <%= @publisher.name %></h2>

<p class="mb-5">
  <%= @publisher.name %> published <%= @publisher.games.count %> different games from 2004 - 2008.
</p>

<div class="content">
  <ol start="<%= (@games.current_page - 1) * @games.limit_value + 1 %>">
    <% @games.each do |game| %>
      <li>
        <%= link_to game.title, game %> on the <%= game.consoles.map { |console| link_to console.name, console }.to_sentence.html_safe %>
      </li>
    <% end %>
  </ol>
</div>

<%= paginate @games %>
