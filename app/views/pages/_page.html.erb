<div id="<%= dom_id page %>">
  <p>
    <strong>Title:</strong>
    <%= page.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= page.content %>
  </p>

  <p>
    <strong>Permalink:</strong>
    <%= page.permalink %>
  </p>

  <% if page.permalink == "about_us" %>
    <p>
      <strong>Entity-Relationship Diagram:</strong>
    </p>
    <%= image_tag("erd.png", alt: "Entity-Relationship Diagram", class: "erd-image") %>
  <% end %>
</div>
